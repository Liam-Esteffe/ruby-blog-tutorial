<%= stylesheet_link_tag "_form.css" %>

<div class="form-group">
<%= link_to "Revenir en arrière", :back , class: 'linked-back'%>

<%= form_with model: article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, class: 'input' %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body, class:'input' %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
  <%= form.label :status %><br>
  <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
</div>

    <%= form.submit 'Créer un article', :class => 'button' %>
<% end %>

  </div>

<div class="footer">
  <p>Made By Liam Esteffe</p>
</div>